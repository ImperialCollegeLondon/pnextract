 # not yet integrated with the "released" codes due to portability concerns / too experimental 
 ifdef USE_OMP 
  msCFLAGS += -DOpenMP $(mpic++ -showme:compile) -fopenmp
  msLFLAGS += $(mpic++ -showme:link)  -fopenmp
 endif
endif

ifeq ($(USE_XDMF),1)
   msCFLAGS += -I${msSrc}/Xdmf -DXDMF  
endif

